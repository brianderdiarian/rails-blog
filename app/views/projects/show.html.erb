<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-2"></div>
    <div class="col-md-6">
      <h1><%= link_to "Brian Derdiarian", root_path %></h1>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-1"></div>
  </div>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-2">
  	<h4>Projects:</h4>
    <% @allprojects.each do |project| %>
    <%= link_to project.title, project_path(project) %></p>
    <% end %>
    <br>
    <h4>Information:</h4>
    <p><% @allresumes.each do |resume| %>
    <%= link_to "Resume", resume_path(resume) %></p>
    <% end %>
  </div>
  <div class="col-md-6">
    <div class="entry">
      <h3><%= @project.title %></h3>
      <p><%= auto_link(simple_format(@project.text, :link => :urls)) %></p>
    </div>
  </div>
  <div class="col-md-2">
    <h4>Past Entries:</h4>
    <% @allarticles.each do |article| %>
    <p><%= link_to article.title, article_path(article) %><br>
    <%= article.created_at.strftime("%B %d, %Y") %></p>
    <% end %>
  </div>
  <div class="col-md-1"></div>
</div>
</div>